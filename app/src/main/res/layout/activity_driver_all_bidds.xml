<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Driver.Fragment.DriverAllBiddsDetail.Ui.DriverAllBiddsActivity">


    <RelativeLayout
        android:id="@+id/relativeHeadingSloc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/earth_yellow"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/backArrowBiddingDetailsORD"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back"
            app:tint="@color/white" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="80dp"
            android:gravity="center_vertical"
            android:text="@string/bidding_details"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_BiddingDetailsORD"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent=".95"
        android:layout_marginBottom="10dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeHeadingSloc" />

</androidx.constraintlayout.widget.ConstraintLayout>