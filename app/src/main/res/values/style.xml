<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="text_dark_medium_14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="primary_button">
        <item name="android:textSize">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:translationZ">2dp</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ValidDateAppearance">
        <!-- Define the appearance properties for valid dates here -->
        <!-- For example, you can set the text color to black -->
        <item name="android:textColor">@android:color/black</item>
        <!-- You can customize other appearance properties as needed -->
    </style>

    <style name="Style_Dialog_Rounded_Corner" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMinor">75%</item>`
    </style>
    <style name="TopCircleDialogStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>


    <style name="MyTimePicker" parent="android:Widget.Material.TimePicker">
        <item name="android:headerBackground">@color/logo_color</item>
        <item name="android:numbersSelectorColor">@color/logo_color</item>
        <item name="android:colorAccent">@color/logo_color</item>
        <item name="android:numbersTextColor">@color/black</item>
    </style>

    <style name="MyratingBar" parent="android:style/Widget.Material.RatingBar">
        <!--none selected..-->
        <item name="colorControlNormal">@color/lightyellow</item>
        <!--selected..-->
        <item name="colorControlActivated">@color/lightyellow</item>
    </style>

</resources>